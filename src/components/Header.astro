.site-header nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
}
.site-header .logo {
    font-weight: bold;
    font-size: 1.5rem;
    color: var(--color-white);
    text-decoration: none;
    font-family: var(--font-secondary);
}
.site-header ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1.5rem;
}
.site-header a {
    color: var(--color-white);
    text-decoration: none;
    transition: color var(--transition-speed) ease;
}
.site-header a:hover, .site-header a:focus {
    color: var(--color-accent);
}
